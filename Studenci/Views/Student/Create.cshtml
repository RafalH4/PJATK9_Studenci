@model Studenci.Models.Student

@{
    ViewBag.Title = "Dodaj studenta";
}

<h2>Dodaj studenta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.IndexNumber)
        @Html.TextBoxFor(model => model.IndexNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IndexNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FirstName)
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FirstName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName)
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.LastName)
    </div>

    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-primary" />
        @Html.ActionLink("Anuluj", "Index", null, new { @class = "btn btn-default" })
    </div>
}